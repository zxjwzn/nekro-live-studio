{
    "name": "撇嘴",
    "type": "animation",
    "data": {
        "description": "向一侧撇嘴并嘴角向下，可表示疑惑,不解等，也可搭配frown来表达生气，不满等",

        // 1. 声明外部参数 (API接口)
        "params": [
            {
                "name": "duration",
                "description": "撇嘴持续的时长(秒)",
                "type": "float",
                "default": 1.0
            }
        ],

        // 2. 定义内部变量，实现比例和约束
        "variables": {
            "mouth_x_target": 1, // 撇嘴目标值
        },

        // 3. 在动作中使用计算好的变量
        "actions": [
            {
                "parameter": "MouthX",
                "to": {"expr": "mouth_x_target"}, // 撇嘴
                "duration": 0.3,
                "easing": "in_out_sine",
                "delay": 0.0
            },
            {
                "parameter": "MouthX",
                "to": 0, // 恢复
                "duration": 0.2,
                "easing": "in_out_sine",
                "delay": {"expr": "duration + 0.3"}
            },
        ]
    }
}